@model FiveGroup.ViewModel.SymptomDepartment

@{
    ViewBag.Title = "新增症狀科別對應";
}


<div class="shadow p-3 mb-5 bg-white rounded">
    <h2>
        <strong>新增症狀科別對應</strong>
    </h2>
</div>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">身體部位</label>
            <div class="col-md-10">
                <select id="part_id" name="part_id">
                    @foreach (var a in Model.bodypartList)
                    {
                        <option value="@a.part_id">@a.part_name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">症狀</label>
            <div class="col-md-10">
                <select id="sym_id" name="sym_id">
                    @foreach (var a in Model.symptomList)
                    {
                        <option value="@a.sym_id">@a.sym_name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">科別</label>
            <div class="col-md-10">
                <select id="dep_id" name="dep_id">
                    @foreach (var a in Model.departmentList)
                    {
                        <option value="@a.dep_id">@a.dep_name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回列表", "Index", new { @cityname = ViewBag.citynameID })
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
