@model FiveGroup.Models.feedback

@{
    ViewBag.Title = "Edit";
}
    <link href="~/Content/Comprehensive.css" rel="stylesheet" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.f_sn)

        <div class="form-group hidden">
            @Html.LabelFor(model => model.f_class, "類別", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("f_class", (IEnumerable<SelectListItem>)ViewBag.fb_class, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.f_class, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group hidden">
            @Html.LabelFor(model => model.f_content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.f_content, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.f_content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group hidden">
            @Html.LabelFor(model => model.f_date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.f_date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.f_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.f_checked, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.f_checked)
                    @Html.ValidationMessageFor(model => model.f_checked, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </div>
    </div>
    
}
<div>
    @Html.ActionLink("返回列表", "Index", new{ f_class = Model.f_class })
</div>

