<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 第五組 </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />    
    <style>
        .d{
            background-color:#00ffff;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top d">
        <div class="container">
            <div class="">
                <div class="">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand ", @style = "font-size:36px" })

                </div>
                <div class="dropdown show">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        功能選單
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        @Html.ActionLink("公告", "Index", "Announcement", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("醫院", "Index", "Hospitals", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("醫師", "Index", "Doctor", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("添加物", "Index", "Ingrediants", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("症狀科別", "Index", "SymptomDepartment", null, new { @class = "dropdown-item" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <h4>&copy; @DateTime.Now.Year - 版權所有  sky corporation </h4>
        </footer>
    </div>
    
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>